{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "./ely.build.js",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./ely.application/src/*"
      ],
      "@core/*": [
        "./ely.core/src/*"
      ],
      "@controls/*": [
        "./ely.controls/src/*"
      ],
      "@options/*": [
        "./ely.controls/src/options/*"
      ],
      "@controllers/*": [
        "./ely.controls.controllers/src/*"
      ],
      "@devMods/*": [
        "./ely.controls.modules/src/*"
      ],
      "@enums/*": [
        "./ely.flat.enums/src/*"
      ]
    },
    "experimentalDecorators": true
  },
  "exclude": [
    "./node_modules",
    "./extra",
    "./ely.documentation",
    "./bin"
  ]
}
