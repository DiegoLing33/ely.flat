{
  "app": {
    "title": "ely.flat { Installer }",
    "author": null
  },
  "manifest": {
    "allowStandaloneMode": true,
    "useMeta": true,
    "useApplicationIcon": true,
    "useViewPort": true,
    "useNavigationBar": false,
    "useSideNavigationBar": false,
    "useContentController": true,
    "useContentRouter": true,
    "useIPhoneXStandaloneFix": true,
    "useDevelopMode": true
  },
  "contentController": {
    "defaultContentId": "index",
    "errorContentId": "error"
  },
  "template": {
    "maxContainerWidth": 900,
    "footer": {
      "title": "Works with ely.Flat Application Engine",
      "subtitle": "ely.flat { Installer } - 2019"
    }
  },
  "sideNavigationBar": {
    "allowMouseEvents": true,
    "items": [
      {
        "text": "Home"
      }
    ]
  },
  "navigationBar": {
    "title": "ely.flat *{* Installer *}*",
    "color": "#2b2b2b",
    "subtitle": null,
    "extendedStyle": false,
    "items": [
      {
        "text": "Главный экран",
        "icon": "home",
        "action": "#content(index)"
      }
    ]
  },
  "meta": {
    "charset": "UTF-8",
    "iconPath": "../resources/icon",
    "appleMobile": {
      "statusBarStyle": "black-translucent"
    },
    "viewport": {
      "fit": "cover",
      "userScale": "no",
      "initialScale": 1.0,
      "maximumScale": 1.0,
      "width": "device-width"
    }
  }
}