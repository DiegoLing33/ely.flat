{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "./ely.build.js",
    "strict": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@core/*": [
        "../ely.core/*"
      ],
      "@controls/*": [
        "./controls/*"
      ],
      "@options/*": [
        "./controls/options/*"
      ],
      "@controllers/*": [
        "./controllers/*"
      ],
      "@devMods/*": [
        "./modules/*"
      ],
      "@enums/*": [
        "./enums/*"
      ],
      "@cnv/*": [
        "./canvas/*"
      ],
      "@play/*": [
        "./play/*"
      ],
      "@math/*": [
        "../ely.core/math/*"
      ],
      "@protocols/*": [
        "./protocols/*"
      ],
      "@fields/*": [
        "./ely.flat.fields/src/*"
      ]
    },
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "ely.d.types"
  },
  "exclude": [
    "./node_modules"
  ]
}
